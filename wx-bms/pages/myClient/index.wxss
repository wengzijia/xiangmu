/* pages/myClient/index.wxss */
page {
  background-color: #F1F3F5;
}

/*  单行省略号 */
.ellipsis-line-1 {
  /* white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis */
  display: -webkit-box;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.myClientContainer{
  padding-bottom: 20rpx;
}

.myClientContainer .clientList {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 32rpx 0 32rpx;
  width: 686rpx;
  height: 100rpx;
  background-color: #ffffff;
  border-radius: 4px;
  font-size: 26rpx;
}

.myClientContainer .clientList .imgWrap {
  display: flex;
  align-items: center;
  flex: 1.5;
}

.myClientContainer .clientList .imgWrap .headPortraits {
  width: 76rpx;
  height: 76rpx;
  margin: 12rpx 0 12rpx 20rpx;
  border-radius: 4rpx;
  flex: none;
}


.myClientContainer .clientList .imgWrap .customerName {
  margin: 28rpx 0 30rpx 20rpx;
  color: #333333;
}


.weChatName {
  margin: 30rpx 20rpx 28rpx 0;
  color: #999999;
  display: flex;
  flex: 1;
}

.weChatName .name{
  flex: 1;
  text-align: right;
}


.imgContainer {
  width: 88rpx;
  height: 88rpx;
  position: fixed;
  right: 32rpx;
  bottom: 272rpx;
}

.imgContainer image {
  width: 100%;
  height: 100%;
}


/* 新建客户弹出框 */
.myClientContainer .van-popup {
  /* 去除背景色 */
  background-color: transparent !important;
}

.myClientContainer .overlay-index--van-overlay {
  background-color: #000000 !important;
  background: rgba(0, 0, 0, 0.5) !important;
}


.popupContainer {
  width: 600rpx;
  height: 304rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
  margin: 0 74rpx 172rpx 76rpx;
  padding-top: 30rpx;
  box-sizing: border-box;
}

/*  输入框 */
.inputBox {
  width: 520rpx;
  height: 120rpx;
  background-color: #EEEEEE;
  margin: 0 40rpx 30rpx;
  border-radius: 8rpx;
}



.inputBox .textarea {
  width: 100%;
  height: 100%;
  /* border: 2rpx solid red; */
  /* text-align: center; */
}

/* 按钮容器 */
.buttonContainer {
  display: flex;
  border-top: 2rpx solid #EEEEEE;
  padding: 30rpx 40rpx;
}

/* 取消 */
.cancel {
  background-color: #E0E0E0;
  width: 220rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #999999;
  font-size: 28rpx;
}

/* 保存 */
.save {
  background-color: #E9333F;
  width: 220rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  font-size: 28rpx;
  margin-left: 80rpx;
}