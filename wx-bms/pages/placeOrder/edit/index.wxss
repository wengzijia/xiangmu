    box-shadow:0 0 20rpx 5rpx #e0e0e0;
}
.submit-bar .submit-btn-box{
    border-radius: 100rpx;
    overflow: hidden;
    width: 600rpx;
    display: flex;
    justify-content: center;
}
.submit-bar .submit-btn-box2 .van-button{
