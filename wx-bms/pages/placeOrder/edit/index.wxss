/* pages/placeOrder/edit/index.wxss */
page{
    background-color:  #F1F3F5;
    /* padding-bottom: 200rpx; */
    padding-bottom: calc(150rpx + constant(safe-area-inset-bottom));
    padding-bottom: calc(150rpx + env(safe-area-inset-bottom));
}
.item-box{
    margin-top: 20rpx !important;
}
.item-box .van-cell{
    font-size: 30rpx !important;
    color:#333333  !important;
    /* padding-top:0 !important; */
    /* line-height: 0; */
    /* padding-bottom: 30rpx !important; */
}
/* 所属客户 */
.customer-title,.customer-value{
    flex: none !important;
    
}
.customer-value{
    flex: 1 !important;
}
.customer-info-box {
    display: flex;
    justify-content:space-between;
}
.customer-info{
    display: flex;
}
.customer-info img{
    border-radius: 6rpx;
}
.customer-avatar{
    width: 52rpx;
    height: 52rpx;
    margin: 0 20rpx;
}

/* 好友选择 */

.van-popup,.van-action-sheet__header,.select-customer-action-sheet{
    background-color: #F1F3F5 !important;
    
}
.select-customer-action-sheet{
    padding-bottom: 108rpx;
}
.select-customer{
    margin-bottom: 10rpx !important;
}
.select-customer2-box{
    position: fixed;
   bottom: 0;
   width:100%;
   padding-bottom: calc(constant(safe-area-inset-bottom));
   padding-bottom: calc(env(safe-area-inset-bottom));
   background-color: #F1F3F5;
}
.select-customer.select-customer2{
    width: calc(100% - 64rpx);
}

.select-customer.select-customer2 .van-cell {
    background: linear-gradient(to left, #FF0036 , #FF6842);
    
}

.select-pro-order-action-sheet .van-action-sheet__header{
    background-color: #fff !important;
    
}



/* 其他 */
.photograph-title{
    display: block !important;
   
}
.photograph-title.van-cell{
    padding-top: 5rpx;
}
.photograph-title .van-cell__value{
    text-align: left;
}
.photograph-btn{
    width: 180rpx !important;
    height: 180rpx !important;
    background-color: #e0e0e0 !important;
    border-radius: 8rpx !important;
}
.photograph-img{
    width: 180rpx !important;
    height: 180rpx !important;
    border-radius: 8rpx !important;
    border:1rpx solid #e0e0e0 !important;
}
.photograph-ico{
    width: 64rpx;
    height: 64rpx;
}

.photograph-img-box{
    position: relative !important;
  
    
}
.del-img-icon{
    position: absolute !important;
    top: 0;
    right: 0;
    padding: 2rpx;
    border-left:1rpx solid #e0e0e0 !important;
    border-bottom:1rpx solid #e0e0e0 !important;
    border-bottom-left-radius: 8rpx;
    color: #e9333f;
    background-color: rgba(255, 255, 255,0.5) ;
}

/* 工单参数 */
.form-item .van-cell__title{
    flex: none !important;
    margin-right: 40rpx;
    min-width: 117rpx;
}

.form-item .van-cell__value{
    text-align: left;
    /* line-height: 0; */
