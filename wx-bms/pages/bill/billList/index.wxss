}

.wid_100 {
  width: 100%;
  height: 240rpx;
}

.headImg {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
  vertical-align: middle;
  border-radius: 6rpx;
}

.fontV {
  font-size: 28rpx;
