.botflex {
  display: flex;

  margin-top: 36rpx;
}

.cont_all {
  flex: 1;
  text-align: center;
}

.cont_all:nth-child(1) {
  border-right: 1px solid #F58074;
}

.cont_all view:nth-child(1) {
  font-size: 28rpx;
  color: #FECFCA;
  margin-bottom: 20rpx;
}

.cont_all view:nth-child(2) {
  font-size: 40rpx;
  color: #fff;
  margin-bottom: 4rpx;
  font-weight: bold;
}

.dateFlex {
  background: #fff;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  justify-content: space-around;
  margin-top: 10rpx;
  border-radius: 8rpx;
  align-items: center;
  font-size: 28rpx;
  word-break: break-word;
  line-height: 1.2;
}

.dateFlex view:nth-child(1) {
  color: #333;
  padding: 0 22rpx 0 21rpx;
}

.dateFlex view:nth-child(2) {
  color: #999;
  flex: 1;
  text-align: center;
}

.dateFlex view:nth-child(3) {
  color: #666;
  flex: 1;
  text-align: center;
}

.none_all {
  margin: 190rpx auto 0;
  text-align: center;
}

.none_all image {
  width: 336rpx;
  height: 288rpx;
}

.none_all view {
  font-size: 30rpx;
  color: #747577;
  margin-top: 40rpx;
}

.share_ab image {
