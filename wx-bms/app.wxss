/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  color: #333;
}

::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.safe_bot {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.loading-text {

  font-size: 30rpx;
  text-align: center;
  clear: #333;
  margin: 30rpx auto;
}

.remarks {
  padding-bottom: 16rpx;
  font-size: 28rpx;
}
text{
  word-break: break-all;
}
