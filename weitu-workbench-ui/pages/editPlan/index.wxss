/* pages/editPlan/index.wxss */
page{
  background-color: #fff;
}
/*  公共类 */
.flex_c_c {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* iPhoneX兼容 底部安全距离外 */
.safetyKmW {
  margin-bottom: constant(safe-area-inset-bottom);
  margin-bottom: env(safe-area-inset-bottom);
}

/* iPhoneX兼容 底部安全距离内 */
.safetyKmN {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.editPlanContainer {
  /* padding: 28rpx 38rpx 28rpx 36rpx; */
  padding: 0rpx 38rpx 0rpx 36rpx;
}

.twoJiSortBox {
  display: flex;
  font-size: 30rpx;
}

.twoJiSortText {
  color: #777777;
}

.selectedPlan {
  font-size: 24rpx;
  color: #3D7EFF;
  margin-top: 4rpx;
}

/* .planScrollBox {

} */

.twoJiSortImgListBox {
  display: flex;
  flex-wrap: wrap;
}

.twoJiSortImg {
  width: 212rpx;
  height: 212rpx;
  border-radius: 8rpx;
}

.addPlan {
  width: 212rpx;
  height: 212rpx;
}

/* 底部 */
.bottomBox {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 112rpx;
  background-color: #FFFFFF;
}

.bottomBox .save {
  width: 678rpx;
  height: 84rpx;
  background-color: #3D7EFF;
  color: #FFFFFF;
  border-radius: 66rpx;
  margin: 14rpx auto;
}