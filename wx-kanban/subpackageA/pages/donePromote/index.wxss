page {
  background-color: #F4F5FC;
  width: 100%;
}

/* 公共类 */
.flex_c_c {
  display: flex;
  justify-content: center;
  align-items: center;
}

.mainBody {
  padding: 20rpx 0 0 16rpx;
  /* height: 1500rpx; */
  /* iPhoneX兼容 底部安全距离 */
  padding-bottom: calc(200rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
}

/* 下机数量 */
.planeNumberBox {
  width: 718rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx 16rpx 32rpx;
  box-sizing: border-box;
}

.planeNumberBox .planeNumTitle {
  font-size: 30rpx;
  font-weight: 700;
  color: #262626;
}

/* 单个订单号 */
.bigBox .bigOrderNumber {
  font-size: 30rpx;
  color: #262626;
  margin-top: 32rpx;
}

.bigInputBox {
  display: flex;
  width: 100%;
  justify-content: space-between;
  flex-wrap: wrap;
}

.bigInputBox .bigInput {
  width: 332rpx;
  height: 70rpx;
  margin-top: 16rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  border: 2rpx solid #D9D9D9;
  font-size: 26rpx;
  box-sizing: border-box;
}

/* 更多订单号 */
.moreOrderNumBox {
  width: 686rpx;
  background: #F6F7FB;
  border-radius: 16rpx;
  margin-top: 24rpx;
  padding: 24rpx;
  box-sizing: border-box;
}

.moreOrderNumBox .moreOrderNumber {
  font-size: 30rpx;
  color: #262626;
}

.moreOrderNumBox .itemBox:nth-of-type(n+2) {
  margin-top: 32rpx;
}

.moreOrderInputBox {
  display: flex;
  width: 100%;
  justify-content: space-between;
  flex-wrap: wrap;
}

.moreOrderInputBox .moreOrderInput {
  width: 308rpx;
  height: 70rpx;
  background: #FFFFFF;
  font-size: 26rpx;
  border-radius: 16rpx;
  border: 2rpx solid #D9D9D9;
  padding: 24rpx;
  margin-top: 16rpx;
  box-sizing: border-box;
}

/* 下机图片 */
.planeImgBox {
  width: 718rpx;
  height: 290rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  margin-top: 20rpx;
  padding: 24rpx 16rpx 0 16rpx;
  box-sizing: border-box;
}

.planeImgBox .planeImgTitle {
  font-size: 30rpx;
  color: #262626;
  font-weight: 700;
  margin-bottom: 32rpx;
}

/* 底部 */
.bottomBox {
  width: 750rpx;
  height: 128rpx;
  background-color: #FFFFFF;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 32rpx;
  z-index: 999;
  /* iPhoneX兼容 底部安全距离 */
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.bottomBox .cancel {
  font-size: 32rpx;
  color: #3D7EFF;
  border: 2rpx solid #3D7EFF;
  width: 260rpx;
  height: 80rpx;
  border-radius: 130rpx;
  box-sizing: border-box;
}

.bottomBox .affirm {
  font-size: 32rpx;
  color: #FFFFFF;
  background-color: #3D7EFF;
  border: 2rpx solid #3D7EFF;
  width: 260rpx;
  height: 80rpx;
  border-radius: 130rpx;
  box-sizing: border-box;
}

/* 提示弹窗 */
.hintPopup {
  /* 去除背景色 */
  background-color: transparent !important;
}

.hintBox {
  width: 600rpx;
  height: 410rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  text-align: center;
  padding-top: 50rpx;
  box-sizing: border-box;
}

.hintBox .hintTitle {
  font-size: 40rpx;
  color: #3D7EFF;
  font-weight: 700;
}

.hintBox .hintText {
  font-size: 30rpx;
  color: #333333;
  margin-top: 40rpx;
}

.hintBox .hintAffirm {
  width: 220rpx;
  height: 64rpx;
  background: #3D7EFF;
  border-radius: 32rpx;
  color: #FFFFFF;
  margin: 0 auto;
  margin-top: 108rpx;
}