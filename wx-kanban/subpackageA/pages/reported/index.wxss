page {
  background-color: #F4F5FC;
}

/* 公共类 */
.flex_c_c {
  display: flex;
  justify-content: center;
  align-items: center;
}

.mainBody {
  padding: 18rpx 16rpx 0 16rpx;
  /* iPhoneX兼容 底部安全距离 */
  padding-bottom: calc(200rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(200rpx + env(safe-area-inset-bottom));
}

/* 异常订单 */
.excOrderBox {
  width: 718rpx;
  /* height: 426rpx; */
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx 16rpx 32rpx 16rpx;
  box-sizing: border-box;
}

.excOrderTitle {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.selectAllBox .selectAllText {
  font-size: 28rpx;
  color: #8C8C8C;
}

.checkAllBox {
  font-size: 28rpx;
  color: #262626;
}

.checkAllBox checkbox {
  display: block;
  margin-top: 24rpx;
}

.excOrderTitle .excOrderText {
  font-size: 30rpx;
  color: #262626;
  font-weight: 700;
}

.excOrderSelect .van-checkbox {
  margin-top: 24rpx;
}

.excAllBox .selectAll {
  border: 1px solid;
}

/* 异常相关内容 */
.excContainer {
  width: 718rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  margin-top: 20rpx;
  padding: 24rpx 16rpx 32rpx;
  box-sizing: border-box;
}

/* 异常类型选择 */
.excTypeText {
  font-size: 30rpx;
  color: #262626;
  font-weight: 700;
}

.excTypeSelect .van-checkbox-group {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.excTypeSelect van-checkbox {
  width: 200rpx;
  margin-top: 24rpx;
  color: #262626;
  font-size: 28rpx;
}

/* 异常纸张数 */
.excPaperNum {
  font-size: 30rpx;
  color: #262626;
  margin-top: 32rpx;
  font-weight: 700;
}

.excPaperSelect {
  margin-top: 24rpx;
}

.excPaperSelect .van-radio-group {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #262626;
}

.excPaperSelect .excNumCustomBox {
  width: 332rpx;
  height: 70rpx;
  background: #F6F7FB;
  border-radius: 16rpx;
  border: 2rpx solid #D9D9D9;
  box-sizing: border-box;
  padding: 12rpx 24rpx 18rpx 24rpx;
}

.excNumCustomBox .excNumCustom {
  font-size: 26rpx;
}

/* 异常图片 */
.excImgBox .excImgTitle {
  font-size: 30rpx;
  color: #262626;
  font-weight: 700;
  margin-top: 32rpx;
  margin-bottom: 24rpx;
}

/* 异常备注 */
.excRemarkBox {
  margin-top: 16rpx;
}

.excRemarkBox .excRemarkTitle {
  font-size: 30rpx;
  color: #262626;
  font-weight: 700;
}

.excRemarkInputBox {
  display: flex;
}

.excRemarkInputBox .excRemarkTitle {
  font-size: 30rpx;
  color: #262626;
  font-weight: 700;
}

.excRemarkInputBox .inputBox {
  width: 600rpx;
  height: 160rpx;
  background: #F6F7FB;
  border-radius: 16rpx;
  border: 2rpx solid #D9D9D9;
  margin-top: 24rpx;
  padding: 16rpx 0 0 24rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  flex-shrink: 0;
}

.excRemarkBox .excRemarkLength {
  font-size: 24rpx;
  color: #8C8C8C;
  margin: 156rpx 0 0 8rpx;
}

/* 底部 */
.bottomBox {
  width: 750rpx;
  height: 128rpx;
  background-color: #FFFFFF;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 32rpx;
  /* iPhoneX兼容 底部安全距离 */
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
}

.bottomBox .goPro {
  font-size: 32rpx;
  color: #3D7EFF;
  border: 2rpx solid #3D7EFF;
  width: 260rpx;
  height: 80rpx;
  border-radius: 130rpx;
  box-sizing: border-box;
}

.bottomBox .stopPro {
  font-size: 32rpx;
  color: #FFFFFF;
  background-color: #3D7EFF;
  border: 2rpx solid #3D7EFF;
  width: 260rpx;
  height: 80rpx;
  border-radius: 130rpx;
  box-sizing: border-box;
}


/* 微信原生多选样式 */
checkbox .wx-checkbox-input {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
}

/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #1989fa;
  border-color: #1989fa;
}

/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

/* 修改vant多选框样式 */
.van-checkbox .van-checkbox__icon-wrap van-icon {
  font-size: 36rpx !important;
}

/* 修改vant单选框样式 */
.van-radio van-icon {
  font-size: 36rpx !important;
}