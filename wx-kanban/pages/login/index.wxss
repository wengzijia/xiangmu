/* pages/login/index.wxss */
page {
  width: 100%;
}
/* 公共类 */
.flex_c_c{
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 图片 */
.imgBox{
  width:750rpx;
  height: 448rpx;
}

.imgBox .logoBackground{
 width: 100%;
 height: 100%;
}
/* 登录 */
.loginBox{
  padding: 40rpx 70rpx 0 70rpx; 
}
/* 手机号 */
.loginBox .mobileBox{
  display: flex;
  background-color: #F2F3F7;
  width: 610rpx;
  height: 100rpx;
  border-radius: 76rpx;
}

.mobileBox .mobile{
  width: 20px;
  height: 20px;
  margin: 30rpx 0 30rpx 48rpx;
  flex-shrink: 0;
} 

.mobileBox .mobileInput{
 margin: 28rpx 0rpx 30rpx 16rpx;
 width: 100%;
 font-size: 30rpx;
} 
/* 验证码 */
.loginBox .codeBox{
  display: flex;
  background-color: #F2F3F7;
  width: 610rpx;
  height: 100rpx;
  border-radius: 76rpx;
  flex-shrink: 0;
  margin: 40rpx 0 48rpx 0; 
  position: relative;
}

.codeBox .code{
  width: 20px;
  height: 20px;
  margin: 30rpx 0 30rpx 48rpx;
  flex-shrink: 0;
} 

.codeBox .codeInput{
 margin: 28rpx 0rpx 30rpx 16rpx;
 width: 42%;
 font-size: 30rpx;
} 
/* 获取验证码 */
.codeBox .getCode{
  /* margin: 16rpx 24rpx 16rpx 122rpx; */
  background-color: #3D7EFF;
  width: 180rpx;
  height: 68rpx;
  border-radius: 76rpx;
  font-size: 26rpx;
  color: #FFFFFF;
  padding: 16rpx 24rpx 16rpx 26rpx;
  box-sizing: border-box;
  flex-shrink: 0;
  position: absolute;
  top: 16rpx;
  right: 24rpx;
 } 
/* 等待时间 */
 .codeBox .waitTime{
  /* margin: 16rpx 24rpx 16rpx 122rpx; */
  background-color:#D9D9D9;
  width: 180rpx;
  height: 68rpx;
  border-radius: 76rpx;
  font-size: 26rpx;
  color: #3D7EFF;
  flex-shrink: 0;
  position: absolute;
  top: 16rpx;
  right: 24rpx;
 } 
/* 禁用按钮 */
.loginBox .disableLogin{
  width: 610rpx;
  height: 100rpx;
  background-color: #D9D9D9;
  color: #AAAAAA;
  border-radius: 50rpx;
}

.look{
  width: 28%;
  margin: 40rpx auto 0;
  color: #AAAAAA;
  font-size: 28rpx;
}

.TCPBox{
  position: fixed;
  bottom: 160rpx;
  left: 168rpx;
  font-size: 28rpx;
}


