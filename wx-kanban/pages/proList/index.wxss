.anoPicBox .anoPicListBox{
  width: 80%;
  margin-left: 16rpx;
}


.anoPicListBox .anoPic{
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
  margin-right: 16rpx;
}

/* 异常按钮 */
.anoBtnBox{
  margin-top: 20rpx;
  border-top: 2rpx solid #F2F3F7;
}

.anoBtnBox .disRecPro,.anoBtnBox .recPro{
  width: 168rpx;
  height: 56rpx;
  border-radius: 34rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  margin-left: 518rpx;
}

.anoBtnBox .disRecPro{
