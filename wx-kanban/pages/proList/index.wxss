/* 异常备注 */
.anoBox .anoRemarkBox{
  width: 686rpx;
  /* height: 66rpx; */
  background: #F6F7FB;
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 24rpx;
  color: #8C8C8C;
  margin-top: 20rpx;
  box-sizing: border-box;
  display: flex;
  /* 数字不换行 */
  word-break: break-all;
}

.anoRemarkBox .text{
  flex-shrink: 0;
}
.anoRemarkBox .content{
  margin-left: 16rpx;
}

/* 异常图片 */
.anoPicBox{
  width: 686rpx;
  height: 132rpx;
  background: #F6F7FB;
  border-radius: 16rpx;
  font-size: 24rpx;
  color: #8C8C8C;
  margin-top: 16rpx;
  padding: 16rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
} 

