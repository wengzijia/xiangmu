/* pages/proList/index.wxss */
page{
  width: 100%;
  background-color:  #F4F5FC;
}
/* 公共类 */
.flex_c_c{
  display: flex;
  justify-content: center;
  align-items: center;
}
/* 搜索 */
.searchBox{
  display: flex;
  padding: 8rpx 0 12rpx 16rpx;
  background-color: #FFFFFF;
}

.searchBar{
  width: 490rpx;
  height: 68rpx;
  background-color: #F6F7FB;
  border-radius: 48rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  padding: 16rpx  24rpx 16rpx 16rpx;
  position: relative;
}

.searchBar .searchIcon{
  width: 36rpx;
  height: 36rpx;
  margin-right: 24rpx;
}

.searchBar .searchInput{
  font-size: 28rpx;
  width: 85%;
}

.searchBar .clearBox{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 24rpx;
}

.searchBar .clearBox  .clear{
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  /* margin-right: 24rpx; */
}

.searchBox .search{
  margin: 14rpx 0 10rpx 16rpx;
  font-size: 30rpx;
  color: #595959;
}

/* 主体 */
.mainBody{
  padding: 38rpx 16rpx  0 16rpx;
  background-color: #F4F5FC;
}

.tabBox{
  padding-bottom: 20rpx;
}

/* 修改vant标签激活色 */
.tabBox .van-tab--active{
  font-weight: 700;
}

/* 修改vant激活下划线 */
.tabBox .van-tabs__line {
  width: 58rpx !important;
  height: 8rpx !important;
  bottom: 18rpx !important;
}

/* 修改vant标签背景色 */
.tabBox .van-tabs__scroll {
  background-color: transparent;
}
/* 修改vant标签字体大小 */
.tabBox .van-tab{
  font-size: var(--tab-font-size,17px);
}
/* tab切换列表 */
.waitAPSBox ,.anoBox ,.doneBox{
  /* 苹果使用内边距生效 外边距不生效 */
  padding-bottom: 52rpx;
}

.proListBox:first-child,.anoListBox:first-child,.doneListBox:first-child{
  margin-top: 0rpx;
}

/* 待排产 */
.proListBox{
  width: 718rpx;
  height: 456rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin-top: 20rpx;
  padding: 20rpx  20rpx 20rpx 16rpx;
  box-sizing: border-box;
  position: relative;
}



.proTextBox{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  margin-bottom: 18rpx;
}

.proTextBox .proRightText{
  color: #F9AC14;
}

.proInfoBox{
  display: flex;
  padding: 20rpx 0;
  border-top:2rpx solid #F2F3F7;
  border-bottom:2rpx solid #F2F3F7;
}

.proImgBox{
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.proImgBox .proImg{
  width: 100%;
  height: 100%;
}

.proBInfo{
  margin-left: 20rpx;
}

.proInfoBox .proInfo{
  font-size: 28rpx;
  color: #333333;
  margin-left: 20rpx;
}

.proInfo .poNumBox{
  display: flex;
}

.proInfo .proItem{
  margin-top: 10rpx;
}

.proInfo .proLText{
  color: #8C8C8C;
  margin-right: 10rpx;
}

.poNumBox .proJiBox .proJi{
  width: 48rpx;
  height: 28rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  background-color: #ff4d4f;
  border-radius: 6rpx;
  margin-left: 16rpx;
  /* flex-shrink: 0; */
}


/* .proListBox .proInfoBtn{
  
} */

.proInfoBtn .startPro{
  width: 168rpx;
  height: 56rpx;
  border-radius: 34rpx;
  background-color: #3D7EFF;
  color: #FFFFFF;
  font-size: 28rpx;
  /* margin-top: 42rpx;
  margin-left: 510rpx; */
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}

