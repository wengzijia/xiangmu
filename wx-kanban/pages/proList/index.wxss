/* 没有订单提示和没有搜索结果 */
.empty,.noSearch{
  margin-top: 332rpx;
  text-align: center;
}

.empty .emptyImg,.noSearch .noSearchImg{
  width: 336rpx;
  height: 288rpx;
}

.empty .emptyText,.noSearch .noSearchText{
  margin-top: 40rpx;
  font-size: 30rpx;
  color: #747577;
}

/* 提示弹窗 */
.hintPopup {
  /* 去除背景色 */
  background-color: transparent !important;
}

.hintBox{
  width: 600rpx;
  height: 410rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  text-align: center;
  padding-top: 50rpx;
  box-sizing: border-box;
}

.hintBox .hintTitle{
  font-size: 40rpx;
  color: #3D7EFF;
  font-weight: 700;
}

.hintBox .hintText{
  font-size: 30rpx;
  color: #333333;
  margin-top: 60rpx;
}

.hintBox .hintAffirm{
  width: 220rpx;
  height: 64rpx;
  background: #3D7EFF;
  border-radius: 32rpx;
  color: #FFFFFF;
  margin:0 auto;
  margin-top: 60rpx;
}

/* 搜索状态提示 */
.searchStatusBox{
  text-align: center;
  margin-top: 330rpx;
}
.searchStatusBox .searchStatusImg{
  width: 338.41rpx;
  height: 248.2rpx;
}

.searchStatusBox .SSHintTextBOX{
  font-size: 30rpx;
