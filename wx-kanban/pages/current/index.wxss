/* 大图 */
.bigImgBox {
  position: relative;
  width: 750rpx;
  height: 548rpx;
}
.tag{
    position: absolute;
    /* width: 100rpx; */
    padding: 0 20rpx;
    height: 60rpx;
    top: 0;
    right: 0;
    background-color: #ffd889;
    text-align: center;
    line-height: 60rpx;
    border-radius: 0 20rpx 0 20rpx;
}
.stopImg{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.bImgS {
  width: 750rpx;
  height: 548rpx;
}

.bImgS .bigImg {
  width: 100%;
  height: 546rpx;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.bigImgBox .picNum {
  position: absolute;
  bottom: 24rpx;
  right: 28rpx;
  width: 82rpx;
  height: 46rpx;
  background: rgba(33, 33, 33, 0.67);
  color: #FFFFFF;
  border-radius: 50rpx;
}

/* 大信息 */
.bigInfoBox {
  width: 750rpx;
  height: 432rpx;
  display: flex;
  background-color: #FFFFFF;
  padding-top: 28rpx;
  padding-left: 16rpx;
  box-sizing: border-box;
}

.bigInfoBox .leftTitle view,
.rightInfo view {
  margin-top: 20rpx;
  font-size: 30rpx;
}

.bigInfoBox .leftTitle {
  text-align: right;
  color: #8C8C8C;
}

.bigInfoBox .rightInfo {
  color: #333333;
  padding-left: 30rpx;
}

.rightInfo .ji {
  width: 48rpx;
  height: 28rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  background-color: #ff4d4f;
  border-radius: 6rpx;
  margin-left: 16rpx;
}

/* 除废操作规程 */
.jjgBox {
  width: 718rpx;
  height: 92rpx;
  background-color: #FFFFFF;
  display: flex;
  margin: 20rpx 16rpx 30rpx 16rpx;
  padding: 28rpx 32rpx 30rpx 32rpx;
  border-radius: 16rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}

.jjgBox .inform {
  width: 28rpx;
  height: 28rpx;
}

.jjgBox .jjgTitle {
  margin-left: 16rpx;
  color: #262626;
}

.jjgBox .cat {
  margin-left: 296rpx;
  color: #3D7EFF;
}

/* 内容切换 */
.contextSwitch {
  display: flex;
  box-sizing: border-box;
  font-size: 34rpx;
  color: #262626;
  margin: 30rpx 0 20rpx 32rpx;
}

.contextSwitch .remarks {
  margin: 0 60rpx;
}

.actColor {
  color: #3D7EFF;
}

/* 详情 */
.detailsBox {
  display: flex;
  padding: 0 16rpx;
  justify-content: space-between;
  flex-wrap: wrap;
}

.detailsBox .itemBox {
  width: 348rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  box-sizing: border-box;
}

.detailsBox .itemBox:nth-of-type(n+3) {
  margin-top: 30rpx;
}

.itemBox .bigImgBox {
  width: 348rpx;
  height: 280rpx;
}

.itemBox .bigImgBox .bigImg {
  width: 100%;
  height: 100%;
}

.itemBox .info {
  padding: 16rpx 16rpx 20rpx;
}

.itemBox .info .poNumber {
  font-size: 28rpx;
  color: #262626;
}

.itemBox .info .poNumber .sd {
  width: 20rpx;
  height: 20rpx;
  margin-left: 8rpx;
}

.info .poNumBox {
  display: flex;
  margin-top: 8rpx;
}

.info .poNumBox .stop {
  width: 64rpx;
  height: 32rpx;
  font-size: 20rpx;
  color: #E9333F;
  background: #FFE5E7;
  border-radius: 8rpx;
  margin-right: 8rpx;
}

.itemBox .info .poNum {
  font-size: 24rpx;
  color: #8C8C8C;
}

/* 备注 */
.remarksBox {
  width: 718rpx;
  /* height: 618rpx; */
  background: #FFFFFF;
  border-radius: 16rpx;
  margin: 0 16rpx;
  margin-bottom: 50rpx;
  padding: 24rpx 16rpx 32rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #262626;
}

.remarksBox .item:not(:last-child) {
  margin-bottom: 24rpx;
}

.remarksBox .flatContent,
.remarksBox .matterContent,
.remarksBox .proContent,
.remarksBox .massContent {
  margin-top: 8rpx;
  color: #8C8C8C;
}

/* 异常信息 */
.anoInfoBox {
  width: 718rpx;
  /* height: 400rpx; */
  background: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx 16rpx 32rpx;
  box-sizing: border-box;
  margin: 0 16rpx 20rpx 16rpx;
}

.anoInfoBox .time {
  font-size: 28rpx;
  color: #262626;
}

.anoPro,
.anoCause,
.anoNum,
.anoRemark {
  display: flex;
  font-size: 28rpx;
  margin-top: 16rpx;
}

.anoPro .itemText,
.anoCause .itemText,
.anoNum .itemText,
.anoRemark .itemText {
  color: #8C8C8C;
  flex-shrink: 0;
}

.anoPro .itemContent,
.anoCause .itemContent,
.anoNum .itemContent,
.anoRemark .itemContent {
  margin-left: 16rpx;
  word-break: break-all;
}

.anoInfoImg {
  margin-top: 16rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
}

/* 空提示 */
.emptyHintBox {
  text-align: center;
  margin-top: 120rpx;
}

.emptyHintBox .emptyImg {
  width: 336.51rpx;
  height: 288.02rpx;
}

.emptyHintBox .emptyHintText {
  font-size: 30rpx;
  color: #747577;
  margin-top: 40rpx;
}

/* 底部 */
.bottomBox {
  width: 750rpx;
  height: 128rpx;
  background: #FFFFFF;
  position: fixed;
  bottom: 0;
  display: flex;
  padding: 16rpx 0 0 34rpx;
  box-sizing: border-box;
}

.reportBox {
  width: 104rpx;
}

.reportBox .reportImgBox {
  width: 100%;
  text-align: center;
}

.reportBox .reportImgBox .reportImg {
  width: 52rpx;
  height: 52rpx;
}

.reportBox .reportText {
  margin-top: -4rpx;
  font-size: 26rpx;
  color: #747577;
}

.proBtn {
  margin: 8rpx 32rpx 24rpx 20rpx;
}

.proBtn .startPro {
  width: 560rpx;
  height: 80rpx;
  background-color: #3D7EFF;
  border-radius: 42rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}

.proBtn .donePro {
  width: 560rpx;
  height: 80rpx;
  background-color: #3D7EFF;
  border-radius: 42rpx;
  font-size: 32rpx;
  color: #FFFFFF;
}

/* 订单被其他机长生产提示弹窗 */
.hintPopup {
  /* 去除背景色 */
  background-color: transparent !important;
}

.hintBox {
  width: 600rpx;
  height: 410rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  text-align: center;
  padding-top: 50rpx;
  box-sizing: border-box;
}

.hintBox .hintTitle {
  font-size: 40rpx;
  color: #3D7EFF;
  font-weight: 700;
}

.hintBox .hintText {
  font-size: 30rpx;
  color: #333333;
  margin-top: 60rpx;
}

.hintBox .hintAffirm {
  width: 220rpx;
  height: 64rpx;
  background: #3D7EFF;
  border-radius: 32rpx;
  color: #FFFFFF;
  margin: 0 auto;
  margin-top: 60rpx;
}

/* 无订单 */
.noOrderBox {
  /* width: 360rpx; */
  height: 370rpx;
  margin: auto;
  margin-top: 380rpx;
  box-sizing: border-box;
  text-align: center;
}

.noOrderBox .noOrderImgBox {
  width: 336rpx;
  height: 288rpx;
  margin: 0 auto;
}

.noOrderBox .noOrderImgBox .noOrderImg {
  width: 100%;
  height: 100%;
}

.noOrderBox .noOrderText {
  font-size: 30rpx;
  color: #747577;
  margin-top: 40rpx;
}
.stopColor {
  color: #aaa !important;
}
.noStopColor {
  color: #262626;
}