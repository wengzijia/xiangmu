.itemBox {
  width: 718rpx;
  height: 140rpx;
  background-color: #FFFFFF;
  border-radius: 20rpx;
  display: flex;
  margin-top: 20rpx;
  color: #262626;
  display: flex;
  align-items: center;
  padding: 24rpx;
  box-sizing: border-box;
}

.itemBox .headPortraits {
  width: 92rpx;
  height: 92rpx;
  flex-shrink: 0;
}

.itemBox .deviceName {
  font-size: 33rpx;
  margin-left: 40rpx;
}

/* 设备空提示 */
.deviceEmptyHint {
  /* top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  position: absolute; */
  width: 510rpx;
  text-align: center;
  margin: 350rpx auto 0;
}

.deviceEmptyHint .img {
  width: 336.51rpx;
  height: 288.02rpx;
}

.deviceEmptyHint .text {
  color: #747577;
  font-size: 30rpx;
  margin-top: 40rpx;
}

/* 退出登录 */
.exitBox {
  width: 200rpx;
  margin: 40rpx auto;
  text-align: center;
  color: #989898;
}

.exitBox .exitImg {
  width: 60rpx;
  height: 60rpx;
}