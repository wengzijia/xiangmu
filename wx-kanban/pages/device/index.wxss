/* pages/device/index.wxss */
page {
  width: 100%;
  background-color: #F4F5FC;
}

/* 公共类 */
.flex_c_c {
  display: flex;
  justify-content: center;
  align-items: center;
}

.deviceContainer {
  padding: 0 16rpx;
  /* iPhoneX兼容 底部安全距离 */
  margin-bottom: constant(safe-area-inset-bottom);
  margin-bottom: env(safe-area-inset-bottom);
}

