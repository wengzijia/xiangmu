.head{
  width: 100%;
  height: 260rpx;
  border-top: 1px solid #EAE9E9;
  margin-bottom: 20rpx;
  background-color: #EAE9E9;
  position: relative;
}
.picker{
  z-index: 2;
  width: 240rpx;
  margin: 0 auto;
  position: relative;
}
.date{
  /* height: 52rpx;
  line-height: 52rpx; */
  font-size: 32rpx;
  color: #fff;
  padding: 20rpx 0;
  position: relative;
  background: #e00c2e;    
}
.total{
 /* width: 90%;
  height: 164rpx;
   background-color: rgb(255, 87, 87); */ 
  color: #fff;
  margin: 0 auto;
  position: relative;
  top: 4rpx;
  font-size: 28rpx;
  border-radius: 24rpx;
}
.total .t{
  color: rgba(255, 255, 255, .7);
}
.total-head{
  height: 50rpx;
  text-align: center;
  display: flex;
  justify-content: space-between;
}
.total-head text{
  display: inline-block;
  /* line-height: 80rpx; */
   font-family: verdana;
}
.amount{
  font-size: 50rpx;
}
.sm{
  font-size: 24rpx;
  padding-left: 10rpx;
  opacity: 0.8;
}
.total-left{
  width: 33%;
}
.total-center{
  width: 33%;
}
.total-right{
  width: 33%;
}
.content{
  width: 100%;
  box-sizing: border-box;
  /* background-color: white; */
}
.title,.month-list{   
  height:88rpx;
  border-bottom: solid 1px rgb(248, 248, 248);
  display: flex;
  justify-content: space-between;
  background-color:#f0f0f4;
  padding: 0 20rpx;color:#333;
}
.content text{
  display: inline-block;
  line-height:88rpx;
  font-size:30rpx;
}
.month{
  width: 20%;
}
.order-amount{
  width: 25%;
}
.order-statue{
  width: 16%;
}
.save-total{
  width: 26%;
}
.return-total{
  width: 20%;
}
.red{
  color: #ff0036;
}
.month-item{
  position: relative;
  transition: all .2s;
}
.active-gt{
  transform: rotate(-45deg);
  transition: all .2s;
}
.sn{
  width: 50%;
}
.content .info{
  border-bottom: 1px solid rgb(248, 248, 248);
  color: #686868;
  display: flex;
}
.justifty{  
  position: relative;
  justify-content: space-between;
  padding-left: 20rpx;
}
.content .bubble{
  position: absolute;
  top: -40rpx;
  left: 60px;
  background-color: #bfbcbc;
  color: #fff;
  border-radius: 8rpx;
  padding: 0 12rpx;
  line-height: 54rpx;
  box-shadow: 0rpx 0rpx 16rpx rgba(131, 131, 131, 1);
}
.bubble::after{
  position: absolute;
  left: 45%;
  bottom: -10rpx;
  content: '';
  border-right: 10rpx solid transparent;
  border-left: 10rpx solid transparent;
  border-bottom: 10rpx solid #bfbcbc;
  transform: rotate(180deg);
}
.content .info text{
  font-size: 30rpx;
}
.bg-img{
  width: 100%;
  height: 260rpx;
  position: absolute;
  object-fit: contain;
  left: 0;
  top: 0;
  z-index: 0;
}
.draw{
  display: flex;
  justify-content: space-between;
}
.draw text{
  display: inline-block;
  width: 50%;
  text-align: left;
}
.tabs{
  z-index: 9;
  width: 92%;
  height: 70rpx;
  margin: 0 auto 20rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}
.item{
  display: inline-block;
  text-align: center;
  width: 50%;
  height: 100%;
  font-size: 30rpx;
  color: #fff;
  line-height: 70rpx;
  border-radius: 12rpx;
}
.active{
  background-color: rgba(255, 255, 255,.7);
  color: #ff0036;
}
.show-box{
  margin-top:30rpx;
}