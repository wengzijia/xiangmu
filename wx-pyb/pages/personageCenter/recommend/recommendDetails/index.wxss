page {
  background-color: #f5f5f5;
  /* padding-top: 150rpx; */
}
view{
  background-color: #fff;
}
.order,.order-info{
  padding: 32rpx 32rpx 20rpx;
}
.create-time,.order-sn,.user-info,.total{
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}
.user-info{
  border-bottom: 1rpx solid #f5f5f5;
  padding: 36rpx 40rpx;  
}
.user-box{
  margin-bottom: 20rpx;
}
.order-info{
  font-size: 28rpx;
  height: 104rpx;
  overflow: hidden;
  border-bottom: #f5f5f5 solid 1rpx;
}
.order-info view{
  height: 60rpx;
}
.copy-sn{
  padding-right: 20rpx;
}
.copy-sn button{
  margin-top: -6rpx;
  width: 90rpx;
  height: 46rpx;
  border: 1px solid #bbbbbb;
  color: #888;
  font-size: 24rpx;
  border-radius: 23rpx;
  line-height: 46rpx;
  padding: 0;
}
.create-time{
  margin-top: -4rpx;
}
.total{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 36rpx 40rpx;
  box-shadow: #535353 -6rpx 4rpx 6rpx;
}