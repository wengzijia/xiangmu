page {
  background-color: #f4f4f4;
}
.displayFlex {
  display: flex;
  align-items: center;
}
.card {
	margin-top: 20rpx;
	background-color: #fff;
	padding: 20rpx;
}
.borderBottom {
	border-bottom: 2rpx solid #f4f4f4;
}
.paddingBottom_10rpx {
  padding: 10rpx 0;
}
.input {
	height: 60rpx;
	line-height: 60rpx;
	width: 100%;
}
.title {
	width: 160rpx;
}
.row {
	height: 60rpx;
	line-height: 60rpx;
}
.color_FF0036 {
	color: #FF0036;
}
.error {
	font-size: 24rpx;
	margin-left: 160rpx;
}
.switch {
	width: 100rpx;
	text-align: right;
}
.flex_between{
	justify-content: space-between;
}
.footer {
	position: absolute;
	bottom: 0;
	background-color: #ffffff;
	padding-top: 20rpx;
	width: 100%;
}
.footerBtn {
	position: relative;
	left: 50%;
	transform: translate(-50%);
	margin-bottom: 40rpx;
	background: #ff0036;
	height: 80rpx;
	line-height: 80rpx;
	width: 90%;
	text-align: center;
	border-radius: 40rpx;
	color: #ffffff;
}
.left_transform {
	left: 50%;
	transform: translate(-50%);
}