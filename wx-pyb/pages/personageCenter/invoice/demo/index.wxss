button {
  padding: 0;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #ff0036;
  border: none;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  color: #fff;
}

checkbox .wx-checkbox-input {
  border-radius: 50%;
}

checkbox {
  width: 50rpx;
  height: 50rpx;
}

.order {
  margin-bottom: 24rpx;
  border-bottom: 1rpx solid #e7e7e7;
  border-top: 1rpx solid #e7e7e7;
  background-color: #fff;
}

.order:first-child {
  border-top: 0;
}

.order-list {
  padding: 20rpx 32rpx 2rpx;
}

.list-top,
.goods-info,
.list-bottom {
  display: flex;
  justify-content: space-between;
}

.list-top {
  height: 60rpx;
  font-size: 32rpx;
}

.information {
  color: #999999;
  display: block;
  padding-right: 16rpx;
}

.information text {
  word-break: break-all;
}

.order-sn {
  font-weight: 600;
  display: flex;
}

.list-content {
  font-size: 30rpx;
  padding-right: 12rpx;
}

.list-bottom {
  margin-bottom: 16rpx;
  margin-top: 16rpx;
  height: 46rpx;
  font-size: 30rpx;
  position: relative;
}

.list-tittel {
  height: 32rpx;
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #333333;
}

.order-state {
  height: 32rpx;
  font-size: 30rpx;
}

.order-count {
  font-size: 30rpx;
  display: flex;
}

.money {
  font-size: 34rpx;
}

.fontsBold {
  font-weight: 600;
}

.order-list-item {
  width: 100%;
}

.checked-box {
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  margin-right: 20rpx;
}

.info-flex {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.imgbox {
  width: 180rpx;
  height: 220rpx;
  background-color: rgb(248, 248, 248);
  margin-right: 16rpx;
}
.imgbox image {
  width: 180rpx;
  height: 220rpx;
}
.noAdmin {
  height: calc(100vh - 66rpx - constant(safe-area-inset-bottom));
  height: calc(100vh - 66rpx - env(safe-area-inset-bottom));
}
.order_flex {
  font-size: 28rpx;
  /* margin-bottom: 20rpx; */
  line-height: 1.5;
  padding-bottom: 20rpx;
}
