page {
  background-color: #F4F4F4;
  font-family: "Helvetica Neue", "Hiragino Sans GB", "Microsoft YaHei", "\9ED1\4F53", Arial, sans-serif;
  font-size: 32rpx;
}

.navigator-hover {
  background: none;
}

.cart-box {
  padding-bottom: 100rpx;
}

.cart-list {
  position: relative;
  padding: 20rpx 20rpx 20rpx 100rpx;
  /* height: 250rpx; */
  border-bottom: 1rpx solid #E9E9E9;
  border-top: 1rpx solid #E9E9E9;
  background: #fff;
  margin-top: 20rpx;
  z-index: 0;
  float: left;
}

.cart-list .cart-pro-select {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  width: 45rpx;
  height: 45rpx;
}

.cart-list .cart-thumb {
  position: absolute;
  top: 20rpx;
  left: 85rpx;
  width: 185rpx;
  height: 185rpx;
}

.cart-list .cart-pro-name {
  display: inline-block;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
}

.cart-con {
  width: 100%;
  color: #A6A6A6;
  font-size: 30rpx;
  float: left;
  padding-bottom: 20rpx;
}

.cart-list .cart-pro-price {
  /* display: inline-block; */
  float: left;
  height: 80rpx;
  line-height: 80rpx;
  color: #FF0036;
  font-size: 35rpx;
  font-weight: bold;
}

.cart-list .cart-count-box {
  position: absolute;
  right: 20rpx;
  bottom: 30rpx;
  border: 1px solid #EBEBEB;
}

.cart-list .cart-count-box text {
  text-align: center;
}

.cart-count-down,
.cart-count-add {
  float: left;
  font-size: 50rpx;
  width: 65rpx;
  height: 55rpx;
  line-height: 50rpx;
  background: #F5F5F5;
  color: #aaa;
  /* font-weight: bold; */
}

.cart-count-num {
  width: 150rpx;
  height: 55rpx;
  float: left;
  text-align: center;
  color: #333;
  /* padding-top: 10rpx; */
  background: #FCFCFC;
  /* margin:0 10rpx */
  z-index: 0;
}

.cart-del {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 44rpx;
}

.details {
  font-size: 30rpx;
}

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 100rpx 0 80rpx;
  box-sizing: border-box;
  background: #AB956D;
  color: #fff;
}

.total-select {
  position: absolute;
  left: 20rpx;
  top: 25rpx;
  width: 45rpx;
  height: 45rpx;
}

.order-icon {
  position: absolute;
  right: 40rpx;
  top: 25rpx;
  width: 45rpx;
  height: 45rpx;
}

.order-icon image,
.order-icon navigator {
  display: block;
  width: 45rpx;
  height: 45rpx;
}

.cart-toatl-price {
  float: right;
  width: 120rpx;
}

.cart-noBox {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  -moz-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
}

.cart-no-data {
  padding: 20rpx 0;
  color: #999;
  text-align: center;
  font-size: 26rpx;
}

.cart-no-data image {
  width: 280rpx;
  height: 200rpx;
}

page::after {
  content: '';
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 1px;
  background-color: #f5f5f5;
  z-index: 9999;
}

/* pages/cart/cart.wxss */
.cart_container {
  display: flex;
  flex-direction: row;
}

.scroll {
  margin-bottom: 120rpx;
}

.column {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.sku {
  margin-top: 60rpx;
  margin-left: 100rpx;
}

.sku-price {
  color: red;
  position: relative;
  margin-top: 70rpx;
}

.price {
  color: #FE0036;
  position: relative;
  font-weight: bold;
  font-size: 35rpx;
}

.title {
  font-size: 38rpx;
  margin-top: 40rpx;
}

/* .small_text {
  font-size: 26rpx;s
  margin-right: 20rpx;
  margin-left: 95rpx;
} */
.small_text {
  font-size: 28rpx;
  margin-right: 40rpx;
  margin-left: 95rpx;
}

.item-select {
  width: 40rpx;
  height: 40rpx;
  margin-top: 90rpx;
  margin-left: 20rpx;
}

.item-allselect {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.item-image {
  width: 180rpx;
  height: 180rpx;
  margin: 20rpx;
}

.bottom_line {
  width: 100%;
  height: 2rpx;
  background: lightgray;
}

.bottom_total {
  position: fixed;
  display: flex;
  flex-direction: column;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  background: white;
  border-top: 1rpx solid #e3e3e4;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.button-red {
  background-color: #FF0036;
  /* 红色 */
}

button {
  position: fixed;
  right: 0;
  color: white;
  text-align: center;
  display: inline-block;
  font-size: 32rpx;
  border-radius: 0rpx;
  width: 30%;
  height: 120rpx;
  line-height: 120rpx;
}

.topbox {
  height: 60rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
}

.evencolor {
  float: left;
}

.details text {
  word-break: break-all;
}

