.tabs1 {
  font-size: 32rpx;
  line-height: 86rpx;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  justify-content: space-between;
  color: #333;
}
.tabs1 > view {
  text-align: center;
  width: 50%;
}
.tabs1 view text {
  display: inline-block;
  border-bottom: rgba(255, 255, 255, 0) 4rpx solid;
  /* transition: all .3s ease; */
}
.tabs1 .grid > text {
 
  color: #fff;
  /* transition: all .3s ease; */
}
.sidebar-box{
    width: 100%;
    display: flex;
    justify-content: space-between;
    background-color: #f4f4f4;
}
.sidebar{
  background-color: #fff;
  width: 270rpx;
  font-size: 30rpx;
}
.sidebar-item{
    width: 270rpx;
    height: 100rpx;
    display: inline-block;
    text-align: center;
    line-height: 100rpx;
    transition: all .3s ease;
}
.sidebar-imgbox{
    width: 100%;
    text-align: center;
    box-sizing: border-box;
    padding-bottom: calc(constant(safe-area-inset-bottom) + 20rpx);
    padding-bottom: calc(env(safe-area-inset-bottom) + 20rpx );
}
.isactive{
    background-color: #f4f4f4;
    color: #ff0036;
    transition: all .3s ease;
}
.daomo-item{
  display: inline-block;
  width: 410rpx;
  /* height: 410rpx; */
  position: relative;
  border-radius: 20rpx;
  background-color: #fff;
  margin-top: 30rpx;
}
.item_btn{
  height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    color: #E9333F;
    background: rgba(233, 51, 63, 0.1);
    /* border-radius: 0px 0px 20rpx 20rpx; */
    border-radius: 0px 0px 20rpx 20rpx;
}
.daomo-img{
  width: 410rpx;
  height: 410rpx;
  display: block;
}
.btn-box{
  text-align: center;
  color: #E9333F;
}
.up-btn{
  display: inline-block;
  width: 420rpx;
  height: 80rpx;

  border-radius: 40rpx;
  margin-top: 80rpx;
  padding: 16rpx 0;
  box-sizing: border-box;
}
.bor1{
  border: #E9333F 1rpx solid;
  color: #E9333F;
}
.bor2{
  border: #bbb 1rpx solid;
  color: #bbb;
}
.next-btn{
  display: inline-block;
  width: 280rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #E9333F;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
}
.example{
  width: 100%;
  height: 630rpx;
  background-color: #F7F8FB;
  text-align: center;
}
.example-img{
  width: 600rpx;
  height: 500rpx;
}
.tips{
  color: #747577;
  position: relative;
  top: 20rpx;
}
